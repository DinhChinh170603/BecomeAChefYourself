<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommend recipe today"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textFontWeight="900"
            android:padding="5dp">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recommend_recipe_list">
        </androidx.recyclerview.widget.RecyclerView>

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/search_view"
            android:layout_margin="15dp"
            android:background="@drawable/searchview_shape"
            android:queryHint="Search for your recipe...">
        </SearchView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/all"
                android:text="@string/all"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/sort_button_shape">
            </TextView>

            <TextView
                android:layout_width="95dp"
                android:layout_height="30dp"
                android:id="@+id/most_follow"
                android:text="@string/most_follow"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/sort_button_shape">
            </TextView>

            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:id="@+id/most_react"
                android:text="@string/most_react"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/sort_button_shape">
            </TextView>

            <TextView
                android:layout_width="95dp"
                android:layout_height="30dp"
                android:id="@+id/most_recent"
                android:text="@string/most_recent"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/sort_button_shape">
            </TextView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_list"
            android:nestedScrollingEnabled="false"
            android:layout_marginVertical="5dp">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>