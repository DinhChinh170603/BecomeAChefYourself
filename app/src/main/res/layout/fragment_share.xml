<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.share.ShareFragment">

    <TextView
        android:id="@+id/share_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your own recipe!"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/dish_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/share_welcome_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="What is your dish's name?"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/dish_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/dish_name_text"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/recipe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The mysterious recipe:"
        app:layout_constraintTop_toBottomOf="@+id/dish_name_input"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="10dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/recipe_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="30"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/recipe_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="10dp"/>
    <Button
        android:id="@+id/preview_article_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Preview"
        />


</androidx.constraintlayout.widget.ConstraintLayout>