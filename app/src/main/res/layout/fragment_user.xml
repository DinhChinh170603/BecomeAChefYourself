    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <View   android:id="@+id/ellipse_1"
                        android:background="@drawable/ellipse_1_shape"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <ImageView
                        android:id="@+id/vector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/human" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    >

                    <TextView android:id="@+id/user_fullname"
                        android:textSize="26sp"
                        android:textColor="@color/_61_8k_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gordon_ramsay_string"
                        />

                    <TextView
                        android:id="@+id/user_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@user full name"
                        android:textSize="15sp"/>
                    <!--                    android:cursorVisible="false"-->
                    <!--                    android:focusable="false"-->


                    <RelativeLayout
                        android:id="@+id/follow_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <View   android:id="@+id/follow_frame"
                            android:background="@drawable/follow_frame"
                            android:layout_width="150dp"
                            android:layout_height="24dp" />

                        <TextView
                            android:id="@+id/follow_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/follow_string"
                            android:textColor="@color/follow_color"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/user_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="bio"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="25dp"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView android:id="@+id/_post_count"
                    android:textSize="22sp"
                    android:textColor="@color/_61_8k_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_61_8k_string"
                    android:gravity="center"
                    />

                <TextView android:id="@+id/recipes"
                    android:textSize="17sp"
                    android:textColor="@color/bookmarks_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recipes_string"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView android:id="@+id/_follower_count"
                    android:textSize="22sp"
                    android:textColor="@color/_61_8k_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_10_5m_string"
                    android:gravity="center"
                    />

                <TextView android:id="@+id/followers"
                    android:textSize="17sp"
                    android:textColor="@color/bookmarks_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followers_string"
                    android:gravity="center"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/_bookmark_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_100k_string"
                    android:textColor="@color/_61_8k_color"
                    android:textSize="22sp"

                    />

                <TextView
                    android:id="@+id/bookmarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bookmarks_string"
                    android:textColor="@color/bookmarks_color"
                    android:textSize="17sp"

                    />
            </LinearLayout>
        </LinearLayout>


