<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.test.fragments.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_share"
        android:name="com.example.test.fragments.ShareFragment"
        android:label="@string/title_share"
        tools:layout="@layout/fragment_share" >
    </fragment>

    <fragment
        android:id="@+id/navigation_bookmarks"
        android:name="com.example.test.fragments.BookmarksFragment"
        android:label="@string/title_bookmark"
        tools:layout="@layout/fragment_bookmarks" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.test.fragments.LoginFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/navigation_sign_up"
        android:name="com.example.test.fragments.SignUpFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_sign_up" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.test.fragments.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/navigation_article"
        android:name="com.example.test.fragments.ArticleFragment"
        android:label="@string/title_article"
        tools:layout="@layout/fragment_article" />

    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.example.test.fragments.EditProfileFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_edit_profile" />

    <fragment
        android:id="@+id/navigation_change_password"
        android:name="com.example.test.fragments.ChangePasswordFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_change_password" />

    <fragment
        android:id="@+id/navigation_admin"
        android:name="com.example.test.fragments.AdminFragment"
        android:label="@string/title_article"
        tools:layout="@layout/fragment_admin" />
</navigation>